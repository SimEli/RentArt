<div class="page">  
  <div class="booking-page">
    <div class="left">
      <div class="booking-title">
          <h1>Booking form</h1>
      </div>
      <div class="image_of_this_artwork">
        <p>we can add here the image
        </p>
      </div>
    </div>
    <div class="right">
      <div class="booked-dates">
          <h4>Already booked dates</h4>
          <ol>
            <% @artwork.bookings.each do |booking| %>
              <li> <%= booking.start %> to <%= booking.end %></li>
            <% end %>
          </ol>
      </div>
      <div class="booking_form">
        <%= simple_form_for([@artwork,@booking]) do |f| %>
          <%= f.input :start, as: :date, html5: true %>
          <%= f.input :end, as: :date, html5: true %>
          
          <%= f.submit%>
        <% end %>
      </div>
    </div>
  </div>
</div>