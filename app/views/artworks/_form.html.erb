<div class="container">
  <div class="form">
    <%= simple_form_for(artwork) do |f| %>
      <div id="name">
        <%= f.label :name %>
        <div id="input">
          <%= f.text_field :name %>
        </div>
      </div>
      <div id="artist">
        <%= f.label :artist %>
        <div id="input">
          <%= f.text_field :artist %>
        </div>
      </div>
      <div id="description">
        <%= f.label :description %>
        <div id="input">
          <%= f.text_field :description %>
        </div>
      </div>
      <div id="size">
        <%= f.label :size %>
        <div id="input">
          <%= f.text_field :size %>
        </div>
      </div>
      <div id="city">
        <%= f.label :city %>
        <div id="input">
          <%= f.text_field :city %>
        </div>
      </div>
      <div id="category">
        <%= f.label :category %>
        <div id="input">
          <%= f.text_field :category %>
        </div>
      </div>
      <div id="price">
        <%= f.label :price %>
        <div id="input">
          <%= f.text_field :price %>
        </div>
      </div>
        <%= f.input :photo, as: :file %>
      <%= f.submit %>
    <% end %>
  </div>
    <div class="buttons">
      <div id="backindex"><%= link_to "Back to artworks", artworks_path %></div>
    </div>
</div>
