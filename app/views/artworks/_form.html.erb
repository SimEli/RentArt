<%= simple_form_for(artwork) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :artist %>
  <%= f.text_field :artist %>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :size %>
  <%= f.text_field :size %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
<div class="buttons">
  <div id="backindex"><%= link_to "Back to artworks", artworks_path %></div>
</div>

